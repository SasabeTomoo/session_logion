<h1>ブログ投稿画面</h1>
<%= form_with(model: @blog, local: true ,url: confirm_blogs_path ) do |form| %>
  <div class="blog_name">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="blog_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <%= form.submit %>
<% end %>
<%= link_to 'インデックスへ' , blogs_path %>
